                        HeightRequest="50" />
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Bottom Nav -->
        <BoxView Grid.Row="2" 
                 BackgroundColor="#f8f9fa"
                 HeightRequest="60">
            <HorizontalStackLayout>
                <Label Text="Journal | Home | Stats" 
                       FontSize="14"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </BoxView>
    </Grid>
</ContentPage>
