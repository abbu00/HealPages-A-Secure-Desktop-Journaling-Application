                            Padding="20,12" />
                    <Button Text="ðŸ˜¢ Sad" 
                            BackgroundColor="White" 
                            TextColor="#667eea"
                            CornerRadius="25"
                            Padding="20,12" />
                </HorizontalStackLayout>
                
                <Entry Placeholder="Give your day a title..." 
                       BackgroundColor="White"
                       HeightRequest="50" />
                
                <Editor Placeholder="Write about your day..." 
                        BackgroundColor="White"
                        HeightRequest="300" />
                
                <Button Text="ðŸ’¾ Save Journal Entry"
                        BackgroundColor="#667eea"
                        TextColor="White"
