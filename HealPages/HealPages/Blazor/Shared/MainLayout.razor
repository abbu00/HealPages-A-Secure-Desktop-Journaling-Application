@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    private string currentPage = "journal";
    
    private void NavigateTo(string page)
    {
        currentPage = page;
        StateHasChanged();
    }
    
    private string GetActiveClass(string page)
    {
        return currentPage == page ? "active" : "";
    }
}